<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/SCREEN_2"
    >
    <androidx.cardview.widget.CardView
        android:id="@+id/hotelItemCard"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="14dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        app:cardMaxElevation="4dp"
        style="@style/SCREEN_2">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/SCREEN_2">
            <ImageView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/thumbnailCard"
                android:src="@drawable/test_image"
                android:scaleType="centerCrop"
                android:layout_width="wrap_content"
                android:layout_height="200dp"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/thumbnailCard"
                app:layout_constraintStart_toStartOf="parent"
                android:padding="18dp"
                style="@style/SCREEN_2">
                <TextView
                    android:id="@+id/titleCardTxt"
                    android:text="1 King bed, guest room, Non-smoking"
                    android:textSize="16sp"
                    style="@style/TEXT"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:id="@+id/roomNumberTxt"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp"
                    android:text="2 room allowed"
                    app:layout_constraintTop_toBottomOf="@+id/titleCardTxt"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <androidx.cardview.widget.CardView
                    android:id="@+id/selectBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/titleCardTxt"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:cardCornerRadius="10dp"
                    android:backgroundTint="#C8102E">
                    <TextView
                        android:paddingVertical="8dp"
                        android:paddingHorizontal="20dp"
                        android:text="Select"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/priceCardText"
                    app:layout_constraintTop_toBottomOf="@+id/roomNumberTxt"
                    android:text="$165,3"
                    android:textColor="#4C4DDC"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/nightCardTxt"
                    app:layout_constraintBottom_toBottomOf="@+id/priceCardText"
                    app:layout_constraintStart_toEndOf="@+id/priceCardText"

                    android:text=" /night"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>