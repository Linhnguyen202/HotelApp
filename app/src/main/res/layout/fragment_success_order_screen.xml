<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.roomPage.SuccessOrderScreen"
    style="@style/SCREEN">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingTop="30dp"
            app:layout_constraintTop_toBottomOf="parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:src="@drawable/check_success" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center_horizontal"
                android:text="@string/congrat_title"
                style="@style/TEXT"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/confirmTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:paddingHorizontal="20dp"
                android:text="A confirmation email has been sent to phamvanthang048@gmail.com"
                style="@style/TEXT"
                android:textSize="16sp" />

            <RelativeLayout
                android:id="@+id/headerPay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/avaContainer"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:cardCornerRadius="15dp">

                    <ImageView
                        android:id="@+id/avaHotel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:src="@drawable/test_image" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/hotelName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_toEndOf="@+id/avaContainer"
                    android:text="Luxvoy Luxury Ha Noi Hotel"
                    style="@style/TEXT"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="@string/confirm_number"
                style="@style/TEXT_2"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/phoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="98581811"
                style="@style/TEXT"
                android:textStyle="bold" />

            <View
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#727272"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Stay information"
                style="@style/TEXT_2"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/timeInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Sep 11-14 (3 Nights)"
                style="@style/TEXT"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/roomNumberInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="1 Room, 2 Guests"
                style="@style/TEXT"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1 King bed, guest room, Non-Smoking"
                style="@style/TEXT"
                android:textStyle="bold" />

            <View
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#727272"/>

            <TextView
                android:id="@+id/roomName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Your payment option"
                android:textColor="#777E90"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/paymentType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pay when you stay"
                style="@style/TEXT"
                android:textStyle="bold" />

            <View
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#727272"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="@string/addition_charge"
                android:textColor="#777E90"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineHeight="20sp"
                android:text="You may cancel your reservation for no charge, before 3 days' arrival. Please note that we will assess a fee of 160 USD if you must cancel after this deadline."
                style="@style/TEXT"
                android:textSize="14dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/doneBtn"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="#C8102E"
                android:paddingVertical="10dp"
                app:cardCornerRadius="20dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Done"
                    android:textColor="@color/white" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>





</androidx.constraintlayout.widget.ConstraintLayout>