<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="16dp"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12sp"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="Lý do hủy đặt phòng"
        android:background="@drawable/bg_red_corner_top_left_right"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        style="@style/SCREEN">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Hãy điền lí do hủy phòng"
            android:gravity="center"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/feedbackCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Feedback"
            android:background="@drawable/bg_white_corner_border_gray"
            android:padding="12dp"
            android:layout_margin="10dp"/>
        <TextView
            android:id="@+id/error_feed"
            android:text="Error"
            android:textColor="#C8102E"
            android:textSize="16sp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cancel_dialog"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="14sp"
                android:backgroundTint="#dcdcdc"
                android:layout_marginEnd="10dp"
                android:text="Hủy"/>
            <Button
                android:id="@+id/submit_dialog"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="14sp"
                android:text="Xác nhận"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>