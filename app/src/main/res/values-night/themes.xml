<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HotelApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#C8102E</item>
        <item name="colorPrimaryVariant">#C8102E</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.HotelApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="ThemeOverlay.App.MaterialCalendar" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <!-- just override the colors used in the default style -->
        <item name="colorOnPrimary">#C8102E</item>
        <item name="colorPrimary">#C8102E</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="border_bottom_bg" >
        <item name="android:background">@drawable/background_bottom_detail_dark</item>
    </style>

    <!--    dark mode-->
    <style name="SCREEN">
        <item name="android:background">#121212</item>
    </style>
    <style name="SCREEN_2">
        <item name="android:background">#242526</item>
    </style>
    <style name="TEXT">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TEXT_2">
        <item name="android:textColor">#727272</item>
    </style>
    <style name="BUTTON">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="RATINGBAR" parent="android:style/Widget.Material.RatingBar.Small">
        <item name="android:background">#242526</item>
    </style>
    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@color/white</item>
        <item name="tabSelectedTextColor">#C8102E</item>
    </style>
    <style name="LINE">
        <item name="android:background">#242526</item>
    </style>
</resources>